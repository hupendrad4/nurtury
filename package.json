{
  "name": "quoriumagro",
  "version": "1.0.0",
  "private": true,
  "description": "QuoriumAgro - We Grow Roots | Production-ready e-commerce platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "cd apps/api && pnpm prisma migrate dev",
    "db:reset": "cd apps/api && pnpm prisma migrate reset",
    "db:seed": "cd apps/api && pnpm prisma db seed",
    "db:studio": "cd apps/api && pnpm prisma studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "pnpm install && pnpm docker:up && sleep 5 && pnpm db:migrate && pnpm db:seed"
  },
  "devDependencies": {
    "@turbo/gen": "^1.11.2",
    "axios": "^1.6.5",
    "cheerio": "^1.1.2",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-query": "^5.17.9",
    "class-variance-authority": "^0.7.1",
    "lucide-react": "^0.548.0",
    "react-hot-toast": "^2.6.0",
    "tailwind-merge": "^3.3.1"
  }
}
